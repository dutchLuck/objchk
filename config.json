	},
	"ascii": {
		"type": "optFlg",
		"default": "false",
		"short": "A",
		"long": "no_ascii",
		"help": "...... disable ascii output mode"
	},
	"debug": {
		"type": "optFlg",
		"default": "false",
		"short": "D",
		"long": "debug",
		"help": "...... enable debug output mode"
	},
	"help": {
		"type": "optFlg",
		"default": "false",
		"short": "h",
		"long": "help",
		"help": "...... this help / usage information"
